<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DimDialog" parent="@style/TransparentDialog">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TransparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustUnspecified</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="popupButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#AAAAAAAF</item>
        <item name="colorButtonNormal">#ffffffff</item>
    </style>

    <style name="mainButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#AAAAAAAF</item>
        <item name="colorButtonNormal">#ffffffff</item>
    </style>

</resources>
