<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.samsung.jomoyeo1">

    <!-- internet 연결을 위한 permission
        android 6.0 이상/이하 permission 주는 방법이 달라졌다. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- STT를 사용하기 위한 permission -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <uses-sdk android:minSdkVersion="8"></uses-sdk>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar">

        <activity android:name=".login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".dbconnection.SplashActivity"></activity>
        <activity android:name=".login.JoinActivity"></activity>
        <activity android:name=".main.MainActivity"></activity>
        <activity android:name=".main.CombineSchedule"> </activity>
        <activity android:name=".room.AttendActivity"></activity>
        <activity android:name=".room.CreationActivity"></activity>
        <activity android:name=".room.SearchActivity"></activity>
        <activity android:name=".main.ScheduleActivity"> </activity>
        <activity android:name=".room.RoomViewActivity"> </activity>
        <activity android:name=".main.STTActivity"> </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>